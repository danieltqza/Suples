---
const { id, title } = Astro.props;
---

<section id={id}>
  <h2>{title}</h2>
  <slot></slot>
</section>

<style>
  section {
    margin-bottom: 2rem;
  }

  h2 {
    color: var(--secondary-color);
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  p, ul {
    color: var(--text-color);
    font-size: 1.5rem;
    line-height: 1.8;
  }
</style>
